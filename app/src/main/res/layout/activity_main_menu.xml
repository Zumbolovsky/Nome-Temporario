<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andrewsiquieri.kotlinapp.MainMenu">


    <ScrollView
        android:id="@+id/cadastroPessoalScrollView"
        android:layout_width="386dp"
        android:layout_height="513dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/cadastroPessoalLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/cadastroPessoalRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/userImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="139dp"
                    android:layout_marginStart="139dp"
                    android:layout_marginTop="32dp"
                    android:contentDescription="@string/cadastroPessoalImagem"
                    app:srcCompat="@mipmap/incognito_foreground"
                    tools:layout_editor_absoluteX="207dp"
                    tools:layout_editor_absoluteY="357dp" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatButtonAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/userImg"
                    android:layout_alignParentBottom="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:backgroundTint="@color/cardview_shadow_end_color"
                    app:elevation="0dp"
                    app:rippleColor="@color/cardview_shadow_end_color"
                    app:srcCompat="@mipmap/plus_foreground"
                    tools:layout_editor_absoluteX="207dp"
                    tools:layout_editor_absoluteY="101dp" />
            </RelativeLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cadastroPessoalConstraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tituloField"
                    android:layout_width="322dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="@string/cadastroPessoalNome"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/logradouroField"
                    android:layout_width="322dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="@string/cadastroPessoalLogradouro"
                    android:inputType="textEmailAddress"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tituloField" />

                <Spinner
                    android:id="@+id/estadosSpinner"
                    android:layout_width="127dp"
                    android:layout_height="46dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/cidadeField"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logradouroField" />

                <EditText
                    android:id="@+id/cidadeField"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="@string/cadastroPessoalCidade"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logradouroField" />

                <EditText
                    android:id="@+id/numeroField"
                    android:layout_width="322dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="@string/cadastroPessoalNumero"
                    android:inputType="phone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/estadosSpinner" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/usuarioConstraintLayout"
                    android:layout_width="322dp"
                    android:layout_height="183dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/layout_border"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/numeroField">

                    <TextView
                        android:id="@+id/usuarioText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="245dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/cadastroPessoalUsuario"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/emailField"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:ems="10"
                        android:fontFamily="sans-serif-condensed"
                        android:hint="@string/cadastroPessoalEmail"
                        android:inputType="textEmailAddress"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/usuarioText" />

                    <EditText
                        android:id="@+id/senhaField"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:ems="10"
                        android:fontFamily="sans-serif-condensed"
                        android:hint="@string/cadasroPessoalSenha"
                        android:inputType="textPassword"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/emailField" />
                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
